<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CPP"
        tools:targetApi="31">
        <activity
            android:name="com.uxdesign.ccp_frontend.ListaVideosActivity"
            android:exported="false" />
        <activity
            android:name="com.uxdesign.ccp_frontend.GenerarRecomendacionActivity"
            android:exported="false" />
        <activity
            android:name="com.uxdesign.ccp_frontend.CargarVideoActivity"
            android:exported="false" />
        <activity
            android:name="com.uxdesign.ccp_frontend.LoadingActivity"
            android:exported="false" />
        <activity
            android:name="com.uxdesign.ccp_frontend.VerPedidoActivity"
            android:exported="false" />
        <activity
            android:name="com.uxdesign.ccp_frontend.FinalizarPedidoActivity"
            android:exported="false" />
        <activity
            android:name="com.uxdesign.ccp_frontend.DetalleProductoActivity"
            android:exported="false" />
        <activity
            android:name="com.uxdesign.ccp_frontend.CatalogoProductosActivity"
            android:exported="false" />
        <activity
            android:name="com.uxdesign.ccp_frontend.MenuActivity"
            android:exported="false" />
        <activity
            android:name="com.uxdesign.ccp_frontend.MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.CPP">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>